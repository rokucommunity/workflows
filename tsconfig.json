{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "module": "commonjs",
        "target": "es2018",
        "lib": [
            "esnext",
            "dom"
        ],
        "sourceMap": true,
        "downlevelIteration": true,
        "incremental": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "ts-node": {
        "transpileOnly": false
    }
}
